  <g:HTMLPanel>



  

    
<table>
<tr>
<td valign="top">

<label for="openerName">Opener's Name</label><br/>
  <g:TextBox name="openerName" ui:field="openerNameTextBox"></g:TextBox>
  
  
<h2>Step 1, Opening Totals</h2>
<fbc:CashPanel ui:field="openCashPanel">

</fbc:CashPanel>

<label for="openerName">Total Sales:(Total A)</label><br/>
      		<g:TextBox ui:field="totalSalesTextBox"></g:TextBox><br/>
      		
      		
<label for="openerName">Total Income:(Total B)</label><br/>
      		<g:TextBox ui:field="totalIncomeTextBox"></g:TextBox><br/>
      		
