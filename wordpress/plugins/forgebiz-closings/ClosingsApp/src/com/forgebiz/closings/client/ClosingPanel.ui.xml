    		<fbc:SalesPanel ui:field="salesPanel"></fbc:SalesPanel>

    <h2>Step 4, Income</h2>		
    		
      		<fbc:IncomePanel ui:field="incomePanel"></fbc:IncomePanel>
      		  		
</td>
</tr>


</table>




    <g:Button  ui:field="saveButton2">Save</g:Button>
 <g:Button  ui:field="submitButton2">Submit</g:Button>

 <g:Button  ui:field="deleteButton">Delete</g:Button>   
   <g:Button  ui:field="cancelButton">Cancel</g:Button>       		
</g:HTMLPanel>

</ui:UiBinder>
